<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parameters">

    <TableRow>

        <TextView
            android:id="@+id/TextView504"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="18dip"
            android:text="Κωδικός Πρόσβασης"
            android:textColor="#000000"
            android:textSize="10sp" />


        <EditText
            android:id="@+id/t1"
            android:layout_width="259dp"
            android:layout_height="51dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"

            android:ems="10"
            android:inputType="textPersonName" />


    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/ip1"

            android:layout_width="100dp"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="18dip"
            android:text="ΙΡ ΕΚΤΥΠΩΤΗ"
            android:textColor="#000000"
            android:textSize="10sp" />


        <EditText
            android:id="@+id/t2"
            android:layout_width="259dp"
            android:layout_height="51dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"

            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow>


        <TextView
            android:id="@+id/ip2"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="18dip"
            android:text="ΙΡ SQL SERVER"
            android:textColor="#000000"
            android:textSize="10sp" />


        <EditText
            android:id="@+id/t4"
            android:layout_width="259dp"
            android:layout_height="51dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"

            android:ems="10"
            android:inputType="textPersonName" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"

        android:layout_height="83dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="38dp">


            <Button
                android:id="@+id/button5"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:onClick="SAVE"
                android:text="ΑΠΟΘΗΚΕΥΣΗ ΙΡ"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button5"
                android:onClick="NEO_EIDOS"
                android:text="ΝΕΟΣ ΚΩΔΙΚΟΣ ΠΡΟΣΒΑΣΗΣ"
                android:textSize="8sp" />


            <Button
                android:id="@+id/button7"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button6"
                android:onClick="DELETE"
                android:text="ΑΠΟΘΗΚΕΥΣΗ ΚΩΔ.ΠΡΟΣΒΑΣΗΣ"
                android:textSize="8sp" />


        </RelativeLayout>









    </TableRow>

    <TableRow
        android:layout_width="wrap_content"

        android:layout_height="63dp">



    <RelativeLayout>

        <Button
            android:id="@+id/list_tropos"
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:text="ΕΛΕΓΧΟΣ ΒΑΡΔΙΑΣ"
            android:textSize="10sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_t"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_tropos"
            android:text="Eκτυπωση"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_kl"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_t"
            android:text="ΚΛΕΙΣΙΜΟΣ ΒΑΡΔΙΑΣ"
            android:textSize="10sp" />

        <Button
            android:id="@+id/deleteall"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/button_kl"
            android:text="Μηδενισμός όλων"
            android:textSize="8sp" />
    </RelativeLayout>

    </TableRow>


    <TableRow android:layout_height="315dp">

        <GridView
            android:id="@+id/listEidhp"
            android:layout_width="match_parent"
            android:layout_height="484dp"
            android:layout_below="@+id/listdetail"

            android:background="#8c898f"
            android:numColumns="4" />


    </TableRow>

    <TableRow android:layout_height="315dp"/>

</TableLayout>