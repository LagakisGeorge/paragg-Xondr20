<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trapezia">


    <GridView
        android:id="@+id/grid"
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:listSelector="@drawable/selector"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth">


    </GridView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid2"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_below="@+id/grid"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_bright"
        android:numColumns="4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid2"

        android:layout_marginTop="2dp"
        android:textSize="18sp"
        app:fontFamily="serif"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="177dp" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/grid2"
        android:layout_toRightOf="@+id/textView"
        android:onClick="Paraggelia"
        android:text="Παραγγελία" />

    <Button
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/grid2"
        android:layout_toRightOf="@+id/button19"
        android:text="Πληρωμή" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/grid2"
        android:layout_toRightOf="@+id/payment"
        android:onClick="kentriko"
        android:text="κεντρικο" />


</RelativeLayout>